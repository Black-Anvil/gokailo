.play-video {
    position: absolute;
    z-index: 1;
    top: 50%;
    left: 50%;
    display: inline-flex;
    padding: 20px;
    align-items: flex-start;
    border-radius: 90px;
    background-color: rgba(255, 255, 255, 0.40);
    transform: translate(-50%, -50%);
    transition: background 0.15s linear;
}

.play-video:hover {
    background-color: rgba(255, 255, 255, 0.60);
}

.popup-vimeo {
    position: relative;
    display: flex;
    overflow: hidden;
    font-size: 0;
}

.popup-vimeo img,
.popup-vimeo video {
    display: block;
    transition: transform 0.15s linear;
}

.popup-vimeo:hover img,
.popup-vimeo:hover video {
    transform: scale(1.05);
}

.star > *:not(:last-child) {
    margin: 0 4px 0 0;
}

a {
    color: inherit;
    text-decoration: none;
}

a:hover,
a:focus {
    text-decoration: underline;
}

.shopify-challenge__message {
    margin: 0 0 24px;
}

.page-inner,
.shopify-challenge__container {
    padding: 150px 0 100px;
}

.shopify-challenge__container .shopify-challenge__button {
    margin: 24px auto 0 !important;
}

.link {
    text-decoration: underline;
}

.link:hover,
.link:focus {
    text-decoration: none;
}

input {
    color: var(--grays1);
}

path {
    transition: stroke 0.15s linear;
}

.visible-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    white-space: nowrap;
    opacity: 0;
    border: 0;
    clip: rect(0 0 0 0);
    clip-path: inset(100%);
}

.top-logo {
    color: var(--grays6);
    background-color: var(--primary5);
}

.top-logo__header {
    padding: 120px 0 80px;
    max-width: 1440px;
    margin: 0 auto;
    background-image: url({{ "logo-huge.png" | asset_url}});
    background-repeat: no-repeat;
    background-position: 0 0;
}

.top-logo__header .container > *:not(:last-child) {
    margin: 0 0 16px;
}

.stepper {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.stepper > *:not(:last-child) {
    margin: 0 4px 0 0;
}

.stepper__counter {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6px;
    min-width: 36px;
    width: 36px;
    height: 36px;
    font-size: 0;
    border-radius: 50%;
    border: 1px solid var(--grays4);
    background-color: var(--grays6);
    cursor: pointer;
    transition: border 0.15s linear;
}

.stepper__counter:hover,
.stepper__counter:focus {
    border-color: var(--primary1);
}

.stepper__counter:hover path,
.stepper__counter:focus path {
    stroke: var(--primary1);
}

.stepper__count {
    width: 24px;
    min-width: 24px;
    height: 24px;
    text-align: center;
    background-color: transparent;
    border: none;
}

.cart-counter {
    position: absolute;
    top: -4px;
    right: -4px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 16px;
    width: 16px;
    height: 16px;
    color: var(--grays6);
    text-align: center;
    font-size: 10px;
    font-weight: 600;
    line-height: 16px;
    letter-spacing: 1px;
    text-transform: uppercase;
    border-radius: 50%;
    background-color: var(--primary1);
}

.loader {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    display: none;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    font-size: 0;
}

.loader.isVisible {
    display: block;
}

.loader::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 24px;
    min-width: 24px;
    height: 24px;
    border: 2px solid #fff;
    border-color: #fff transparent #fff transparent;
    border-radius: 50%;
    transform: translate(-50%, -50%);
    animation: infinityRotate 1.2s linear infinite;
}

@keyframes infinityRotate {
    0% {
        transform: rotate(0deg);
    }
    100% {
        transform: rotate(360deg);
    }
}

body::before {
    content: "";
    position: absolute;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    pointer-events: none;
    background-color: rgba(77, 77, 77, 0.6);
    transition: opacity 0.15s linear;
}

body.overlay {
    overflow: hidden;
}

body.overlay::before {
    pointer-events: auto;
    opacity: 1;
}
