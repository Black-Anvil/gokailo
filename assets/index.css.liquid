html,
body {
    font-weight: var(--font-weight-primary);
    font-family: var(--font-family-primary);
    font-size: 15px;
    line-height: 24px;
    color: var(--grays2);
    background-color: var(--grays6);
}

body.hidden::before {
    content: "";
    position: absolute;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(77, 77, 77, 0.6);
}

a {
    color: inherit;
    text-decoration: none;
}

a:hover,
a:focus {
    text-decoration: underline;
}

.link {
    text-decoration: underline;
}

.link:hover,
.link:focus {
    text-decoration: none;
}

input {
    color: var(--grays1);
}

input::placeholder {
    color: var(--grays3);
}

path {
    transition: stroke 0.15s linear;
}

.visible-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    white-space: nowrap;
    opacity: 0;
    border: 0;
    clip: rect(0 0 0 0);
    clip-path: inset(100%);
}

.cart-counter {
    position: absolute;
    top: -4px;
    right: -4px;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 16px;
    width: 16px;
    height: 16px;
    color: var(--grays6);
    text-align: center;
    font-size: 10px;
    font-weight: 600;
    line-height: 16px;
    letter-spacing: 1px;
    text-transform: uppercase;
    border-radius: 50%;
    background-color: var(--primary1);
}

.content h1,
.h1-title {
    font-weight: var(--font-weight-headline);
    font-size: 60px;
    line-height: 68px;
    text-transform: uppercase;
}

.content h2,
.h2-title {
    font-weight: var(--font-weight-headline);
    font-size: 40px;
    line-height: 48px;
    text-transform: uppercase;
}

.content h3,
.h3-title {
    font-weight: var(--font-weight-headline);
    font-size: 30px;
    line-height: 38px;
}

.content h4,
.h4-title {
    font-weight: var(--font-weight-headline);
    font-size: 24px;
    line-height: 32px;
    text-transform: uppercase;
}

.content h5,
.h5-title {
    font-weight: var(--font-weight-primary);
    font-size: 18px;
    line-height: 26px;
}

.content h6,
.h6-title {
    font-weight: var(--font-weight-primary);
    font-size: 16px;
    line-height: 24px;
    text-transform: uppercase;
}

.title-decorator {
    position: relative;
    padding: 0 0 24px;
    text-align: center;
    color: var(--primary5);
}

.title-decorator::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 120px;
    height: 1px;
    background-color: var(--primary1);
    transform: translateX(-50%);
}

.small-text {
    font-size: 13px;
    line-height: 22px;
}

.caption-text {
    font-weight: var(--font-weight-primary);
    font-size: 12px;
    line-height: 18px;
    letter-spacing: 1px;
    text-transform: uppercase;
}

.button-text {
    font-size: 14px;
    font-weight: 600;
    line-height: 22px;
    letter-spacing: 0.56px;
    text-transform: uppercase;
}



.button {
    position: relative;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 12px 26px;
    border-radius: 6px;
    color: inherit;
    border: 1px solid transparent;
    background-color: transparent;
    text-decoration: none;
    cursor: pointer;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    line-height: 22px;
    letter-spacing: 0.56px;
    text-transform: uppercase;
    transition: opacity 0.15s linear;
}

.button:disabled {
    opacity: 0.8;
    pointer-events: none;
}

.button:hover,
.button:focus {
    text-decoration: none;
}

.button--action {
    padding: 0;
    font-size: 15px;
    font-weight: 700;
    line-height: 24px;
    text-transform: none;
    letter-spacing: normal;
    border: none;
}

.button--action svg {
    margin: 0 4px;
    transform: rotate(90deg);
}

.button-icon {
    position: relative;
    display: flex;
    font-size: 0;
    min-width: 24px;
    width: 24px;
    height: 24px;
    background-color: transparent;
    border: none;
    cursor: pointer;
    transition: transform 0.15s linear, color 0.15s linear;
}

.button-icon svg {
    pointer-events: none;
}

.button--primary {
    color: var(--grays6);
    border: 1px solid var(--primary1);
    background-color: var(--primary1);
    transition: box-shadow 0.15s linear, transform 0.15s linear, background-color 0.15s linear, border 0.15s linear, color 0.15s linear;
}

.button--primary:hover,
.button--primary:focus {
    transform: translateY(-3px);
    background-color: var(--primary2);
    border-color: var(--primary2);
    box-shadow: 0 4px 16px 0 rgba(36, 135, 153, 0.20);
}

.button--stroked {
    color: var(--primary1);
    border-color: var(--primary1);
    transition: box-shadow 0.15s linear, transform 0.15s linear, background-color 0.15s linear;
}

.button--stroked:hover,
.button--stroked:focus {
    color: var(--grays6);
    background-color: var(--primary1);
}

.button--stroked.white {
    color: var(--grays6);
    border-color: var(--grays6);
}

.button--stroked.white:hover,
.button--stroked.white:focus {
    color: var(--primary1);
    background-color: var(--grays6);
}

.button-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 0 12px 32px;
}

.button-link::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    width: 24px;
    height: 1px;
    background-color: var(--grays6);
    transform: translateY(-50%);
}

.header {
    position: sticky;
    top: 0;
    z-index: 1000;
}

.container {
    --container-padding: 15px;
    --container-width: 1280px;
    max-width: calc(var(--container-width) + var(--container-padding) * 2);
    margin: 0 auto;
    padding: 0 var(--container-padding);
}

.bg-gray {
    background-color: var(--grays5);
}

.page-inner {
    padding: 150px 0 100px;
}

@media screen and (max-width: 768px) {
    .page-inner {
        padding: 100px 0 80px;
    }

    .content h1,
    .h1-title {
        font-size: 40px;
        line-height: 48px;
    }

    .content h2,
    .h2-title {
        font-size: 30px;
        line-height: 38px;
    }

    .content h3,
    .h3-title {
        font-size: 24px;
        line-height: 32px;
    }

    .content h4,
    .h4-title {
        font-size: 20px;
        line-height: 28px;
    }

    .content h5,
    .h5-title {
        font-size: 18px;
        line-height: 26px;
    }

    .content h6,
    .h6-title {
        font-size: 16px;
        line-height: 24px;
    }

    .title-decorator {
        padding: 0 0 16px;
    }
}
