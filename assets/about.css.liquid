.about {
    padding: 120px 0;
    color: var(--primary4);
    background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.80) 0%, rgba(255, 255, 255, 0.80) 100%), url({{ "about.jpg" | asset_url }});
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.about__wrapper {
    display: flex;
    margin: 0 0 0 -40px;
}

.about__wrapper > * {
    margin: 0 0 0 40px;
}

.about__info {
    min-width: 400px;
    max-width: 400px;
}

.about__slide {
    transition: opacity 0.15s linear;
}

.about__list {
    margin: 40px 0 0;
}

.about__list li {
    position: relative;
}

.about__list button {
    position: relative;
    width: 100%;
    color: inherit;
    border: none;
    background-color: transparent;
    cursor: pointer;
    text-align: left;
    transition: opacity 0.15s linear;
}

.about__list button::before {
    content: "";
    position: absolute;
    top: calc(50% - 1px);
    left: -12px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--primary4);
    transform: translateY(-50%);
    opacity: 0;
    transition: opacity 0.15s linear;
}

.about__list button:hover,
.about__list button:focus {
    opacity: 0.6;
}

.about__list button.active {
    pointer-events: none;
    opacity: 1;
}

.about__list button.active::before {
    opacity: 1;
}

.about__list > li:not(:last-child) {
    margin: 0 0 24px;
}

.about__placement {
    display: flex;
    align-items: flex-start;
}

.about__placement ul {
    margin: 0 0 0 16px;
}

.about__placement .button {
    width: 100%;
}

.about__placement ul > li:not(:last-child) {
    margin: 0 0 16px;
}

.about__risk a[href^="mailto:"] {
    color: var(--primary2);
}

.about__risk > * {
    margin: 0 0 24px;
}

.about__condition ul {
    margin: 24px 0;
}

.about__condition h3 {
    margin: 0 0 16px;
}

.about__condition ul a {
    display: flex;
    align-items: flex-start;
    padding: 24px;
    transition: color 0.15s linear, background-color 0.15s linear;
}

.about__condition ul a span {
    padding: 0;
}

.about__condition ul a span:last-child {
    max-width: 110px;
    width: 100%;
}

.about__condition ul a span:nth-child(2) {
    margin: 0 24px;
}

.about__condition ul a span:first-child {
    max-width: 200px;
    width: 100%;
}

.about__condition ul a:hover,
.about__condition ul a:focus {
    color: var(--grays6);
    text-decoration: none;
    background-color: var(--primary1);
}

.about__condition li:not(:last-child) {
    border-bottom: 1px solid var(--primary4);
}

.about__reviews ul {
    margin: 24px 0;
}

.about__reviews ul li > *:first-child {
    max-width: 140px;
    width: 100%;
    margin: 0 24px 0 0;
}

.about__reviews li {
    display: flex;
    padding: 24px 0;
    border-bottom: 1px solid var(--primary4);
}

.about__trial > *:not(:last-child) {
    margin: 0 0 24px;
}

.about__trial a {
    text-decoration: underline;
    color: var(--primary2);
}

.about__trial a:hover,
.about__trial a:focus {
    text-decoration: none;
}
