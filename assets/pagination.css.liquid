.pagination {
    display: flex;
}

.pagination > span {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 40px;
    min-width: 40px;
    height: 40px;
    border-radius: 6px;
    border: 1px solid var(--grays4);
    transition: border 0.15s linear;
}

.pagination > span:hover,
.pagination > span:focus {
    border-color: var(--primary1);
}

.pagination > span:hover a,
.pagination > span:focus a{
    color: var(--primary1);
}

.pagination > span:not(:last-child) {
    margin: 0 8px 0 0;
}

.pagination a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;

    color: var(--grays2);
    font-size: 14px;
    font-weight: 600;
    line-height: 22px;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-decoration: none;

    transition: color 0.15s linear;
}

.pagination .next a,
.pagination .prev a {
    position: relative;
    font-size: 0;
}

.pagination .prev a::before,
.pagination .next a::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    background-image: url({{ "icon-chevron.svg" | asset_url }});
    background-position: center;
    background-repeat: no-repeat;
    transform: translate(-50%, -50%);
}

.pagination .prev {
    transform: rotate(180deg);
}

.pagination .deco,
.pagination .current {
    pointer-events: none;
}

.pagination .current {
    color: var(--primary1);
    border-color: var(--primary1);
}

