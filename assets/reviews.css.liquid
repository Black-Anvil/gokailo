.single-review {
    padding: 100px 0;
    color: var(--grays2);
    background-image: linear-gradient(0deg, rgba(255, 255, 255, 0.60) 0%, rgba(255, 255, 255, 0.60) 100%), url({{ "single-review.png" }});
    background-size: cover;
    background-repeat: no-repeat;
}

.single-review__block {
    max-width: 730px;
}

.single-review__title {
    color: var(--primary4);
}

.single-review__info {
    margin: 40px 0 0;
}

.single-review__info > *:not(:last-child) {
    margin: 0 0 24px;
}

.single-review__blockquote > *:not(:last-child),
.single-review__author > *:not(:last-child) {
    margin: 0 0 8px;
}

.single-review__author .star path {
    fill: var(--primary1);
}

