<style>
    .apply-adhesive {
        padding: 100px 0;
        background-color: var(--grays5);
    }

    .apply-adhesive__wrapper > *:not(:last-child) {
        margin: 0 0 24px;
    }

    .apply-adhesive iframe {
        width: 100%;
        height: 600px !important;
    }

    @media screen and (max-width: 768px) {
        .apply-adhesive {
            padding: 60px 0;
        }

        .apply-adhesive iframe {
            height: 300px !important;
        }
    }

    @media screen and (max-width: 425px) {
        .apply-adhesive iframe {
            height: 200px !important;
        }
    }
</style>

<section class="apply-adhesive">
    <div class="container">
        <div class="apply-adhesive__wrapper">
            {% if section.settings.title != blank %}
                <h4 class="h4-title title-decorator">{{ section.settings.title }}</h4>
            {% endif %}

            {% if section.settings.video != blank %}
                {{ section.settings.video }}
            {% endif %}

            {% if section.settings.description != blank %}
                <div class="content">
                    {{ section.settings.description }}
                </div>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Apply Adhesive",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "html",
      "id": "video",
      "label": "video"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ]
}
{% endschema %}
