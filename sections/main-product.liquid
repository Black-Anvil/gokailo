{{ "product.css" | asset_url | stylesheet_tag }}

<div class="page-inner">
    <div class="product">
        <div class="container">
            <div class="breadcrumbs">
                <a href="{{ routes.root_url }}">Home</a>
                <a href="{{ routes.collections_url }}">Collections</a>
                <a>{{ product.title }}</a>
            </div>

            <div class="product__wrapper">
                <ul class="product__images">
                    {% for image in product.images %}
                        <li>
                            {{ image | image_url: width: 400 | image_tag: alt: image.alt }}
                        </li>
                        <li>
                            {{ image | image_url: width: 400 | image_tag: alt: image.alt }}
                        </li>
                    {% endfor %}
                </ul>
                <div class="product__info">
                    <div class="product__info-header">
                        <h2 class="h2-title">{{ product.title }}</h2>
                    </div>

                    <div class="h3-title product__info-price">
                        {% render "compare-product-price", product: product %}
                    </div>

                    <div class="product__info-body">
                        {% form "product", product, class: "product__info-form" %}
                            <select style="display: none;" name="id">
                                {% for variant in product.variants %}
                                    <option value={{ variant.id }}>
                                        {{ variant.title }}
                                    </option>
                                {% endfor %}
                            </select>

                            {% comment %}{% render "stepper", product: product %}{% endcomment %}

                            <button class="button button--primary" type="submit">Add to Cart</button>
                        {% endform %}

                        <div class="content">{{ product.description }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
