<style>
    .article {
        padding: 80px 0 100px;
    }

    .article__wrapper {
        display: flex;
        gap: 150px;
    }

    .article__post {
        max-width: 730px;
        width: 50%;
    }

    .article__aside {
        display: flex;
        flex-direction: column;
        gap: 80px;
        max-width: 400px;
        width: 50%;
    }

    .article__aside-item {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .article__aside-list {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }

    .article__card {
        display: flex;
        align-items: flex-start;
        gap: 8px;
    }

    .article__card:hover,
    .article__card:focus {
        text-decoration: none;
    }

    .article__card:hover img,
    .article__card:focus img {
        transform: scale(1.1);
    }

    .article__card:hover h4,
    .article__card:focus h4 {
        color: var(--primary2);
    }

    .article__card h4,
    .article__card h4 {
        transition: color 0.15s linear;
    }

    .article__card-author {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }

    .article__card-separator {
        margin: 0 8px;
        width: 1px;
        height: 14px;
        background-color: var(--grays4);
    }

    .article__card-image {
        width: 100px;
        min-width: 100px;
        height: 100px;
        overflow: hidden;
    }

    .article__card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.15s linear;
    }

    .article__card-info {
        display: flex;
        flex-direction: column;
        align-self: center;
        gap: 8px;
        padding: 4px 0;
    }


    @media screen and (max-width: 1024px) {
        .article__wrapper {
            flex-direction: column;
            gap: 60px;
        }

        .article__post {
            max-width: 100%;
            width: 100%;
        }

        .article__aside {
            gap: 60px;
            max-width: 100%;
            width: 100%;
        }
    }

    @media screen and (max-width: 768px) {
        .article {
            padding: 60px 0 80px;
        }

        .article__aside-item {
            gap: 24px;
        }

        .article__aside-list {
            gap: 16px;
        }

        .article__card-image {
            width: 80px;
            min-width: 80px;
            height: 80px;
        }
    }

    @media screen and (max-width: 425px) {
        .article__card-author {
            align-items: flex-start;
            flex-direction: column;
        }

        .article__card-separator {
            display: none;
        }
    }
</style>

