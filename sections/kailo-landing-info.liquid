<div class="wrapper">
  <hr /><br><br>
  <div>
  {% for block in section.blocks %}
      {% if block.settings.info-heading != '' %}<h4>{{ block.settings.info-heading }}</h4>{% endif %}
      {% if block.settings.info-description != '' %}<p>{{ block.settings.info-description }}</p>{% endif %}
  {% endfor %}
	</div>
</div>
{% if section.settings.button-text != '' %}<div class="btn-wrapper"><button type="button" onclick="trackandtarget('{% if section.setting.button-link != blank %}{{ section.settings.button-link }}{% else %}#buy{% endif %}');"><span>{{ section.settings.button-text }}</span></button></div>{% endif %}
{% schema %}
{
  "name": "Kailo Info",
    "settings": [
      {
         "type": "text",
         "id": "button-text",
         "label": "Button Text"
      },
      {
        "id": "button-link",
        "type": "url",
        "label": "Button link"
      }
	],
    "blocks": [
      {
        "type": "info",
        "name": "Info Point",
        "settings": [
          {
             "type": "text",
             "id": "info-heading",
             "label": "Info Heading"
          },
          {
             "type": "textarea",
             "id": "info-description",
             "label": "Info Description"
          }
        ]
      }
    ]
}
{% endschema %}