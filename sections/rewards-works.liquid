<style>
    .rewards-works {
        padding: 80px 0;
    }

    .rewards-works .container {
        --container-width: 950px
    }

    .rewards-works__wrapper:not(:last-child) {
        margin: 0 0 100px;
    }

    .rewards-works__title {
        margin: 0 0 60px;
        color: var(--primary5);
    }

    .rewards-works__subtitle {
        margin: 0 0 4px;
        color: var(--grays1);
    }

    .rewards-works__list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        align-items: flex-start;
        gap: 40px;
        text-align: center;
    }

    .rewards-works__list > li {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .rewards-works__indicator {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        min-width: 56px;
        height: 56px;
        margin: 0 0 16px;
        border-radius: 90px;
        color: var(--primary1);
        background-color: var(--primary6);
    }

    @media screen and (max-width: 768px) {
        .rewards-works {
            padding: 60px 0;
        }

        .rewards-works__wrapper:not(:last-child) {
            margin: 0 0 80px;
        }

        .rewards-works__title {
            margin: 0 0 40px;
        }

        .rewards-works__list {
            grid-template-columns: 1fr;
            gap: 24px;
        }
    }
</style>


