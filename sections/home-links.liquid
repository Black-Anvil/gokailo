<style>
    .home-links {
        display: flex;
        color: var(--grays6);
        background-color: var(--primary5);
    }

    .home-links > * {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-start;
        width: 33.33%;
        height: 480px;
        padding: 0 80px 60px;
    }

    .home-links .blur-effect {
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .home-links .blur-effect::before,
    .home-links .blur-effect::after {
        content: "";
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(0deg, rgba(53, 93, 102, 0.60) 0%, rgba(53, 93, 102, 0.60) 100%);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        transition: opacity 0.15s linear;
    }

    .home-links .blur-effect::before {
        opacity: 0;
        background-image: linear-gradient(180deg, rgba(36, 135, 153, 0.00) 0%, #248799 100%);
    }

    .home-links > *:hover .blur-effect::before {
        opacity: 1;
    }

    .home-links > *:hover .blur-effect::after {
        opacity: 0;
    }

    .home-links__img {
        position: absolute;
        z-index: -1;
        width: 100%;
        top: 0;
        left: 0;
        height: 100%;
        object-fit: cover;
        object-position: top;
    }

    .home-links__slide:hover,
    .home-links__slide:focus {
        text-decoration: none;
    }

    .home-links__content {
        display: none;
    }

    .home-links__slide:hover .home-links__content,
    .home-links__slide:focus .home-links__content {
        display: block;
    }

    .home-links__content > *:not(:last-child),
    .home-links__info > *:not(:last-child) {
        margin: 0 0 8px;
    }

    @media screen and (max-width: 1024px) {
        .home-links > * {
            padding: 16px;
        }
    }

    @media screen and (max-width: 768px) {
        .home-links {
            flex-direction: column;
        }

        .home-links > * {
            width: 100%;
            height: 375px;
        }
    }
</style>

<ul class="home-links">
    {% for block in section.blocks %}
        <li>
            <a class="home-links__slide" href="{{ block.settings.link_url }}">
                <img class="home-links__img" src="{{ block.settings.image | image_url }}"
                     alt="{{ block.settings.image.alt }}">
                <span class="blur-effect"></span>
                <div class="home-links__info">
                    {% if block.settings.icon != blank %}
                        <img src="{{ block.settings.icon | image_url }}" alt="{{ block.settings.icon.alt }}">
                    {% endif %}

                    {% if block.settings.title != blank %}
                        <h3 class="h1-title">{{ block.settings.title }}</h3>
                    {% endif %}

                    {% if block.settings.content !=blank %}
                        <div class="home-links__content content">
                            {{ block.settings.content }}
                        </div>
                    {% endif %}
                </div>
            </a>
        </li>
    {% endfor %}
</ul>

{% schema %}
{
  "name": "Home Links",
  "blocks": [
    {
      "name": "Link Info",
      "type": "block",
      "limit": 3,
      "settings": [
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Background"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
