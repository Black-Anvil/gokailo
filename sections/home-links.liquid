<style>
    .home-links {
        display: flex;
        color: var(--grays6);
        background-color: var(--primary5);
    }

    .home-links > * {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-start;
        width: 33.33%;
        height: 480px;
        padding: 0 80px 60px;
    }

    .home-links .blur-effect {
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .home-links .blur-effect::before,
    .home-links .blur-effect::after {
        content: "";
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(0deg, rgba(53, 93, 102, 0.60) 0%, rgba(53, 93, 102, 0.60) 100%);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        transition: opacity 0.15s linear;
    }

    .home-links .blur-effect::before {
        opacity: 0;
        background-image: linear-gradient(180deg, rgba(36, 135, 153, 0.00) 0%, #248799 100%);
    }

    .home-links > *:hover .blur-effect::before {
        opacity: 1;
    }

    .home-links > *:hover .blur-effect::after {
        opacity: 0;
    }

    .home-links__img {
        position: absolute;
        z-index: -1;
        width: 100%;
        top: 0;
        left: 0;
        height: 100%;
        object-fit: cover;
        object-position: top;
    }

    .home-links__info {
        max-height: 132px;
        overflow: hidden;
        transition: max-height 0.5s linear;
    }

    .home-links__slide:hover,
    .home-links__slide:focus {
        text-decoration: none;
    }

    .home-links__slide:hover .home-links__info,
    .home-links__slide:focus .home-links__info {
        max-height: 300px;
    }

    .home-links__info > *:not(:last-child) {
        margin: 0 0 8px;
    }
</style>

<ul class="home-links">
    <li>
        <a class="home-links__slide" href="#">
            <img class="home-links__img" src="{{ "home-links-1.png" | asset_url }}" alt="buy">
            <span class="blur-effect"></span>
            <div class="home-links__info">
                {{ "home-links-buy.png" | asset_url | img_tag }}
                <h3 class="h1-title">buy</h3>
                <p>Free shipping in the USA</p>
                <p>Bundle to save</p>
            </div>
        </a>
    </li>

    <li>
        <a class="home-links__slide" href="#">
            <img class="home-links__img" src="{{ "home-links-2.png" | asset_url }}" alt="place">
            <span class="blur-effect"></span>
            <div class="home-links__info">
                {{ "home-links-place.png" | asset_url | img_tag }}
                <h3 class="h1-title">place</h3>
                <p>Watch placement video</p>
                <p>Consult placement specialist</p>
            </div>
        </a>
    </li>

    <li>
        <a class="home-links__slide" href="#">
            <img class="home-links__img" src="{{ "home-links-3.png" | asset_url }}" alt="love">
            <span class="blur-effect"></span>
            <div class="home-links__info">
                {{ "home-links-love.png" | asset_url | img_tag }}
                <h3 class="h1-title">love</h3>
                <p>Tell your friends & family</p>
                <p>Share a testimonial with Kailo</p>
            </div>
        </a>
    </li>
</ul>
