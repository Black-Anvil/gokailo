<style>
    .page-relief {
        padding: 110px 0 90px;
    }

    .page-relief__title {
        margin: 0 0 60px;
        color: var(--primary5);
        text-align: center;
    }

    .page-relief__card {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: flex-end;
        flex-direction: column;
        width: 100%;
        max-width: 290px;
        height: 390px;
        margin: 0 0 0 40px;
        padding: 24px;
        color: var(--grays6);
        background-color: var(--primary5);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        border-radius: 6px;
        overflow: hidden;
    }

    .page-relief__card::before {
        content: "";
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, rgba(53, 93, 102, 0.00) 48.48%, #355D66 100%);
    }

    .page-relief__card svg {
        margin: 0 0 8px;
    }

    .page-relief ul {
        display: flex;
        justify-content: center;
        margin: 0 0 0 -40px;
    }
</style>

<section class="page-relief">
    <div class="container">
        <h2 class="h2-title page-relief__title">reliable relief when you need it most</h2>

        <ul>
            <li class="page-relief__card" style="background-image: url({{ "page-relief-1.png" | asset_url }})">
                {% render "icon-droplet" %}
                <h6 class="h6-title">waterproof</h6>
            </li>

            <li class="page-relief__card" style="background-image: url({{ "page-relief-2.png" | asset_url }})">
                {% render "icon-hourglass" %}
                <h6 class="h6-title">great longevity</h6>
            </li>

            <li class="page-relief__card" style="background-image: url({{ "page-relief-3.png" | asset_url }})">
                {% render "icon-heart" %}
                <h6 class="h6-title">always on</h6>
            </li>
        </ul>
    </div>
</section>
