      "label": "Copyright"
    },
    {
      "type": "header",
      "content": "Socials"
    },
    {
      "type": "checkbox",
      "id": "socials",
      "label": "Show Socials",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "twitter",
      "label": "Show Twitter",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "facebook",
      "label": "Show Facebook",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "youtube",
      "label": "Show Youtube",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "instagram",
