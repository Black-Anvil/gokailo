<script type="module">
    const about = document.querySelector(".home-about");
    const list = about.querySelector(".home-about__list");
    const slider = about.querySelector(".home-about__slider");
    const listButtons = list.querySelectorAll("button");
    const slides = slider.querySelectorAll(".home-about__slide");

    slides.forEach(slide => {
       slide.classList.add("visible-hidden");
    });

    listButtons.forEach((btn, btnIndex) => {
        if (btn.classList.contains("active")) {
            slides[btnIndex].classList.remove("visible-hidden");
        }

        const slideShow = (btnIndex) => {
            slides.forEach((slide, slideIndex) => {
                if (btnIndex === slideIndex) {
                    slide.classList.remove("visible-hidden");
                } else {
                    slide.classList.add("visible-hidden");
                }
            });
        };

        btn.addEventListener("click", (e) => {
            listButtons.forEach(btn => {
                btn.classList.remove("active");
            });

            slideShow(btnIndex);

            e.target.classList.add("active");
        });
    });
</script>
