<style>
    .need-assistance {
        padding: 100px 0;
        background-color: var(--grays5);
    }

    .need-assistance__header {
        margin: 0 0 40px;
        text-align: center;
    }

    .need-assistance__header > *:not(:last-child) {
        margin: 0 0 24px;
    }

    .need-assistance__list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 40px;
    }

    .need-assistance__list > li {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .need-assistance__list > li > *:not(:last-child) {
        margin: 0 0 24px;
    }

    .need-assistance__list h6 {
        margin: 0 0 8px;
        color: var(--grays1);
    }

    .need-assistance__icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        min-width: 56px;
        height: 56px;
        border-radius: 50%;
        border: 1px solid var(--grays4);
    }

    .need-assistance__list a {
        font-weight: 700;
        color: var(--primary1);
    }

    @media screen and (max-width: 768px) {
        .need-assistance {
            padding: 60px 0;
        }

        .need-assistance__header > *:not(:last-child) {
            margin: 0 0 16px;
        }

        .need-assistance__list {
            grid-template-columns: 1fr;
            gap: 32px;
        }

        .need-assistance__list > li {
            max-width: 345px;
            margin: 0 auto;
        }

        .need-assistance__list > li > *:not(:last-child) {
            margin: 0 0 16px;
        }
    }
</style>

<div class="need-assistance">
    <div class="container">
        <div class="need-assistance__header">
            {% if section.settings.title != blank %}
                <h2 class="h2-title title-decorator">{{ section.settings.title }}</h2>
            {% endif %}

            {% if section.settings.text != blank %}
                <p>{{ section.settings.text }}</p>
            {% endif %}
        </div>

        <ul class="need-assistance__list">
            {% for block in section.blocks %}
                <li>
                    {% if block.settings.icon != blank %}
                        <span class="need-assistance__icon">{{ block.settings.icon }}</span>
                    {% endif %}

                    <div>
                        {% if block.settings.title != blank %}
                            <h6 class="h6-title">{{ block.settings.title }}</h6>
                        {% endif %}

                        {% if block.settings.text != blank %}
                            <p>{{ block.settings.text }}</p>
                        {% endif %}
                    </div>

                    {% if block.settings.link_text != blank and block.settings.link_url != blank %}
                        <a href="{{ block.settings.link_url }}">{{ block.settings.link_text }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>

{% schema %}
{
  "name": "Need Assistance",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    }
  ],
  "blocks": [
    {
      "name": "Block Info",
      "type": "block",
      "limit": 3,
      "settings": [
        {
          "type": "html",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        }
      ]
    }
  ]
}
{% endschema %}
