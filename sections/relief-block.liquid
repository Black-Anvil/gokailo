<style>
    .relief-block {
        padding: 100px 0;
    }

    .relief-block__title {
        color: var(--primary5);
        text-align: center;
    }

    .relief-block__list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 40px;
        max-width: 950px;
        margin: 60px auto 0;
    }

    .relief-block__card {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: flex-end;
        flex-direction: column;
        min-height: 390px;
        padding: 24px;
        color: var(--grays6);
        background-color: var(--primary5);
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        border-radius: 6px;
        overflow: hidden;
    }

    .relief-block__card:hover::after {
        opacity: 1;
    }

    .relief-block__card:hover::before {
        opacity: 0;
    }

    .relief-block__card:hover .relief-block__text {
        display: block;
    }

    .relief-block__text {
        display: none;
    }

    .relief-block__card::after,
    .relief-block__card::before {
        content: "";
        position: absolute;
        z-index: -1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, rgba(53, 93, 102, 0.00) 48.48%, #355D66 100%);
        transition: opacity 0.15s linear;
    }

    .relief-block__card::after {
        opacity: 0;
        background: linear-gradient(180deg, rgba(36, 135, 153, 0.00) 0%, #248799 75.13%);
    }

    .relief-block__card > *:not(:first-child) {
        margin: 8px 0 0;
    }

    @media screen and (max-width: 992px) {
        .relief-block__card {
            padding: 16px;
        }

        .relief-block__list {
            gap: 16px;
        }
    }

    @media screen and (max-width: 768px) {
        .relief-block {
            padding: 80px 0;
        }

        .relief-block__card {
            min-height: 345px;
        }

        .relief-block__list {
            grid-template-columns: 1fr;
            margin: 40px auto 0;
        }
    }
</style>

<section class="relief-block">
    <div class="container">
        {% if section.settings.title != blank %}
            <h2 class="h2-title relief-block__title">{{ section.settings.title }}</h2>
        {% endif %}

        <ul class="relief-block__list">
            {% for block in section.blocks %}
                <li class="relief-block__card" style="background-image: url({{ block.settings.image | image_url }})">
                    {% if block.settings.icon != blank %}
                        {{ block.settings.icon }}
                    {% endif %}

                    {% if block.settings.title != blank %}
                        <h6 class="h6-title">{{ block.settings.title }}</h6>
                    {% endif %}

                    {% if block.settings.description != blank %}
                        <p class="relief-block__text">{{ block.settings.description }}</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</section>

{% schema %}
{
  "name": "Relief Block",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "Relief Item",
      "type": "block",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "html",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
