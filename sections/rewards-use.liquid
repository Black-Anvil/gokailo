<style>
    .rewards-use {
        padding: 100px 0;
    }

    .rewards-use .container {
        --container-width: 950px;
    }

    .rewards-use__wrapper:not(:last-child) {
        margin: 0 0 100px;
    }

    .rewards-use__buttons {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 40px 0 0;
    }

    .rewards-use__title {
        max-width: 840px;
        margin: 0 auto 24px;
        color: var(--primary5);
    }

    .rewards-use__text {
        max-width: 740px;
        margin: 0 auto 40px;
        text-align: center;
    }

    .rewards-use__subtitle {
        max-width: 620px;
        margin: 0 auto 24px;
        text-align: center;
    }

    .rewards-use__list {
        display: flex;
        flex-wrap: wrap;
        margin: 0 0 -40px -40px;
    }

    .rewards-use__list > li {
        width: calc(25% - 40px);
        margin: 0 0 40px 40px;
        padding: 16px;
        background-color: var(--grays5);
        text-align: center;
    }

    .rewards-use__list > li > *:first-child {
        color: var(--primary1);
        margin: 0 0 4px;
    }

    @media screen and (max-width: 768px) {
        .rewards-use {
            padding: 80px 0;
        }

        .rewards-use__wrapper:not(:last-child) {
            margin: 0 0 80px;
        }

        .rewards-use__title {
            margin: 0 auto 16px;
        }

        .rewards-use__subtitle {
            margin: 0 auto 24px;
        }

        .rewards-use__list {
            margin: 0 0 -16px -16px;
        }

        .rewards-use__list > li {
            width: calc(50% - 16px);
            margin: 0 0 16px 16px;
        }
    }
</style>

