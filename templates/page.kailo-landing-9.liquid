{% render 'anchorToProducts' %}
<style>
  body {
    font-size: x-large;
    line-height:normal;
  }
  .wrapper {
    max-width:1300px;
  }
  h1 {
  	font-size: 2.4em; 
  }
  .kailo-landing, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6 {
   	color:#545454 ;
    font-weight:400;
    line-height:normal;
  }
  h1, .h1 {
    color:#fff;
  }
  .kailo-landing button, .yes-bundle button {
  	background-color: #928159;
    border-radius:20px;
    color:#fff;
    padding:1em 0;
    font-size:1.2em;
    font-weight:600;
	/*-moz-box-shadow: 0px 0px 15px 2px rgba(0,0,0,0.3);
    -webkit-box-shadow: 0px 0px 15px 2px rgba(0,0,0,0.3);
    box-shadow: 0px 0px 15px 2px rgba(0,0,0,0.3);*/
  }
  .kailo-landing button span, .yes-bundle button span {
  	background-color: #928159;
    border-radius:20px;
    color:#fff;
    padding:1.2em;
    font-size:1.2em;
    font-weight:600;
	-moz-box-shadow: inset 0 0 35px rgba(0,0,0,0.3);
    -webkit-box-shadow: inset 0 0 35px rgba(0,0,0,0.3);
    box-shadow: inset 0 0 35px rgba(0,0,0,0.3);
  }
  /* landing banner */
  .landing-banner h1 {
    font-weight:600;
  }
  .landing-banner {
    position: relative;
    overflow: hidden;
  }
  .landing-banner img {
  	width: 100%;
    position: relative;
    top: -100px;
  }
  .landing-banner .wrapper {
   padding: 130px 0px 155px 0px;
    max-width:700px;
    margin:0;
  }
  .landing-banner .wrapper h1 {
    font-size:3rem;
    line-height:1.2;
  }
    .landing-banner .wrapper p {
    color:white;
      max-width:580px;
  }
  .content-container{
    width:100%;
    margin:0 auto;
    padding:0 2.5%;
  }
  .buy-now-columns{
    display:flex;
    padding-top:70px;
  }
  .buy-now-columns > a{
  	display: block;
    width:66%;
  }
  .buy-now-columns .gallery{
  	width: 34%;
    padding-left: 1%;
    padding-top: 4%;
  }
  .buy-now-columns .gallery .gallery-items{
    display: flex;
    flex-wrap: wrap;
  }
  .buy-now-columns .gallery p{
    font-size:22px;
  }  
  .buy-now-columns .gallery .gallery-items img{
  	padding: 1%;
    width: 33%;
  }
      
  /* landing page content */
  .landing-page-content .wrapper h1, .landing-page-content .wrapper h3 {
    font-weight:600;
  }
  .landing-page-content {
    background-color: #efefef;
    padding:5em 2em 0 2em;
  }
  .landing-page-content .wrapper {
   	text-align:center; 
  }
  /* landing video */
  .landing-video {
   	padding:3em 2em;
  	/*background-image: linear-gradient(#212121, #535353);*/
    background-color:#efefef;
  }
  .landing-video .wrapper {
   	text-align: center;
  }
  .landing-video .video-wrapper {
    padding:3em 2em;
  }
  .landing-video .btn-wrapper {
   	text-align: center;
    padding: 2em;
  }
  /* landing gallery */
  .landing-gallery {
    padding:3em 2em 0 2em;
   	background-color:#efefef; 
  }
  ul.gallery, ul.gallery li {
    padding:0;
    margin:0;
  }
  ul.gallery li img {
    width:100%;
  }
  /*landing info */
  .landing-info-wrapper {
    background-color:#efefef;
    position:relative;
  }
  .landing-info {
    padding:6em 2em 3em 2em;
    color:#5f5c5c;
   	background-image:url({{ 'Kailo-Landing-Info-bg-light.jpg' | asset_img_url: 'master' }}); 
    background-position: center bottom;
    background-repeat:no-repeat;
    background-size: auto 100%;
    position:relative;
  }
  .landing-info-left {
    position:absolute;
    top:0;
    bottom:0;
    left:0;
    right:50%;
    background-image:url({{ 'Kailo-Landing-Info-lbg.jpg' | asset_img_url: 'master' }}); 
    background-position: bottom;
    background-repeat:repeat-x;
    background-size: auto 100%;
  }
  .landing-info-right {
    position:absolute;
    top:0;
    bottom:0;
    left:50%;
    right:0;
    background-image:url({{ 'Kailo-Landing-Info-rbg.jpg' | asset_img_url: 'master' }}); 
    background-position: bottom;
    background-repeat:repeat-x;
    background-size: auto 100%;
  }
  .landing-info .wrapper > div {
   	width:60%; 
  }
  .landing-info .btn-wrapper {
   text-align:center;
   padding:6em 2em; 
  }
  /*landing testimonials */
  .landing-testimonials h1  {
    color:#4f4d4d;
  }
  .landing-testimonials {
    padding: 3em 2em;
   	background-color: #d2d0d0; 
  }
  .landing-testimonials .btn-wrapper {
  	text-align:center;
    padding:8em 2em;
  }
  /* landing faq */
  .landing-faq {
    padding: 3em 2em;
    background-color: #f5f5f5; 
  }
  .landing-faq h1 {
    text-align:center;
    color:#4f4d4d ;
  }
  .landing-faq .wrapper {
  	background-color: #d1d1d1;
    padding:2em;
    border-radius:12px;
  }
  .landing-faq .btn-wrapper {
   text-align:center;
   padding:2em 2em 8em 2em; 
  }
  .accordion {
	cursor: pointer;
    outline: none;
    transition: 0.4s;
    padding-left: 1.5em;
  }

  .accordion:before {
    content: '\25BA';
    color: #8e7d57;
    font-weight: bold;
    float: left;
    margin-left: -2.5em;
    font-size: 0.5em;
    line-height: 2.5em;
  }

  .active:before {
    content: "\25BC";
  }

  .panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.2s ease-out;
    padding-left:2.7em;
  }
  /* landing products */
  .landing-products {
   	padding: 0em 2em 5em 2em;
    background-color: #acaaaa;
  }
  .landing-products .wrapper {
    text-align:center;
   	display:flex; 
  }
  .landing-products .buy-anchor {
   	margin-top:5em; 
  }
  .landing-product-title {
    font-size: 1.3em;
    font-weight: 600;
  }
  .landing-product-price {
    font-size: 2.4em;
  }
  .landing-product-sale {
   	 text-decoration: line-through;
  }
  button.landing-product-add, button.landing-product-add span {
   	font-size: 1em; 
  }
  .product-link {
  	color: #fff;
    cursor: pointer; 
  }
  .product-link > div {
   	font-size: 0.65em; 
  }
  .white-popup {
    position: relative;
    background: #FFF;
    padding: 40px;
    width: auto;
    max-width: 1200px;
    margin: 20px auto;
  }
  .popup-inner{
	display:flex;
  }
  .popup-inner > div{
	flex:100%;
  }
  .special {
	display:block;
    text-align:center;
    width:85%;
  }
  .rate {
	text-align:center;
	margin: -0.5em 0;
  }
  .number {
	font-size:6em;
    font-weight:600;
  }
  .percent {
	position: relative;
    top: -0.5em;
    font-size: 3.5em;
    font-weight:600;
  }
  .off {
    position: relative;
    left: -2.3em;
    font-size: 1.5em;
    font-weight: 600;
  }
  .special-image {
    width:85%;
  }
  .act-now {
    display:block;
    font-size:1.2em;
	font-weight:600;
    text-align:center;
  }
  .offer {
	display:block;
    font-size:2.2em;
    font-weight:600;
    text-align:center;
    color: #ff6b01;
  }
  .original-price {
	display:block;
    text-align:center;
	text-decoration: line-through;
    color:red;
  }
  .new-price {
	display:block;
    text-align:center;
  }
  .yes-bundle {
    margin: 2em 0 1em 0;
	text-align:center;
  }
  .no-thanks {
	display:block;
    text-align:center;
  }
  .no-thanks a {
	color:#343434;
    text-decoration:underline;
    cursor:pointer;
  }
  /* landing footer */
  .landing-footer {
    position:relative;
  	height: 55em;
    background-image: url({{ 'footer-background-light.jpg' | asset_img_url: 'master' }});
    background-repeat: no-repeat;
    background-size: cover;
  }
  .landing-footer .content, .landing-footer .landing-footer-link {
    color:#fff;
    font-size: 1.1em;
  }
  .landing-footer .content {
    padding: 0 3em;
	text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
  }
  /* countdown timer */
  .timer-wrapper {
    position:relative; 
    background-color:black;
    background-image:url({{ 'KailoBox-Holiday-1003-built-website.png' | asset_img_url: 'master' }});
    background-size:cover;
    min-height:30em;
    white-space:nowrap;
    background-repeat: no-repeat;
    background-position: 0px -60px;
  }
  .timer-wrapper .timer-message {
    display:block;
    margin-bottom:.6em;
    font-size:1.5em;
  }
  #timer {
    position: absolute;
    top: 50%;
    left: 35%;
    transform: translate(-50%, -50%);
    z-index:9;
    text-align:center;
  }
  .clock {
   	display:table;
    padding: 20px 20px 10px 20px;
    width: auto;
    background-color: #fff;
    margin: 20px auto;
    border-radius: 10px;
    -webkit-box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.35);
    box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.35);
  }
  #timer .clock div {
    display: inline-block;
    line-height: 1;
    font-weight:bold;
  }
  #days, #hours, #minutes, #seconds, .separator {
    font-size: 1.5em; 
    color: #928159;
    width:70px;
  }
  .separator {
   	width:unset; 
  }
  .clock .sub-text {
    display: block;
    text-align: center;
    font-size: .5em;
    font-weight: normal;
    padding: 10px 0;
    color:#333;
  }
  .timer-wrapper .timer-cta {
    display:block !important;
    margin-top:2em;
  }
  @media (max-width: 1024px) {
    body { font-size: large; }
    .landing-info .wrapper > div {
     width:70%; 
    }
  }
  @media (max-width: 768px) {
    body { font-size: medium; }
    .landing-info .wrapper > div {
     width:80%; 
    }
    .landing-products .wrapper {
      display:block;
    }
    #pageContainer {
      padding-top:0px !important;
    }
    .buy-now-columns .gallery p{
    	font-size:15px;
    }
    .landing-banner .wrapper{
    	max-width:400px;
    }
    .landing-banner .wrapper h1{
    	font-size:1.7rem;
    }
    .landing-banner .wrapper p{
    	max-width:340px;
    }
    .landing-banner{
    	background-position-x: -50px;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .landing-banner .wrapper{
    	padding: 100px 0px 75px 0px;
    }
  }
  @media (max-width: 500px) {
    body { font-size: small; }
    .landing-info {
     background-position: left bottom;
    }
    h1 {
     font-size: 1.9em; 
    }
    .landing-banner .wrapper {
      top: 55%;
    }
    .landing-info .wrapper > div {
     width:100%; 
    }
    .popup-inner{
      display:block;
    }
    #timer {
      left:50%; 
    }
    .timer-wrapper {
      background-position:0 0;
      min-height:35em;
    }
    .timer-wrapper .timer-message {
      font-size:1.5em;
    }
    #days, #hours, #minutes, #seconds, .separator {
      font-size: 2em; 
    }
    .landing-banner{
    	background-position-x: 0px;
    	background-repeat: no-repeat;
      	background-size: auto;
    }
    .landing-banner .wrapper{
    	max-width:none;
    }
    .landing-banner .wrapper p{
    	max-width:none;
    }
    .buy-now-columns{
    	flex-direction:column;
    }
    .buy-now-columns > a, .buy-now-columns .gallery{
    	width:100%;
      	display: flex;
    	flex-direction: column-reverse;
    }
    .buy-now-columns .gallery .gallery-items img{
    	width:50%;
    }
    body{
    	margin-top: -85px;
    }
    .buy-now-columns .gallery p{
    	font-size: 12px;
        width: fit-content;
        margin: 10px auto;
    }
    .buy-now-columns{
    	padding-top:40px;
    }
    
  }
  /* HIDE LIVE CHAT BUTTON IN LOWER RIGHT CORNER */  
  #launcher, button.u-userLauncherColor {
    display:none !important;
  }
</style>
<div class="kailo-landing">
  {% section 'kailo-landing-banner-9' %}
  <div class="landing-page-content">
    <div class="wrapper">
      <!--<h1>{{ page.title }}</h1>-->
      {{ page.content }}
    </div>
  </div>
</div>

